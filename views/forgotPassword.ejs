<title> Forgot Password Page  </title>
<style>
    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 4px;
    }

    .alert-success {
        color: #155724;
        background-color: #d4edda;
        border-color: #c3e6cb;
    }

    .alert-danger {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }
    body {
     background-color: #f5f5f5;
     font-family: sans-serif;
    }
    h1 {
     font-size: 2rem;
     font-weight: bold;
     text-align: center;
     margin-bottom: 2rem;
    }
    form {
     max-width: 400px;
     margin: 0 auto;
     background-color: #fff;
     padding: 2rem;
     border-radius: 5px;
     box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }
    input[type="email"] {
     padding: 1rem;
     border: none;
     background-color: #f5f5f5;
     border-radius: 5px;
     margin-bottom: 1rem;
     width: 100%;
     box-sizing: border-box;
     font-size: 1.2rem;
    }
    button[type="submit"] {
     background-color: #00d1b2;
     border: none;
     border-radius: 5px;
     color: #fff;
     padding: 1rem;
     font-size: 1.2rem;
     cursor: pointer;
     transition: background-color 0.3s ease-in-out;
     width: 100%;
    }
    button[type="submit"]:hover {
     background-color: #009e86;
    }
</style>
  <!-- Alert messages -->
  <% if (message) { %>
    <div id="alert-message" class="alert alert-<%= message.type %>">
      <%= message.text %>
    </div>
  <% } %>
  <!-- Alert messages end -->
<section class="section">
    <div class="container">
     <h1 class="title">Forgot Password Reset Form</h1>
     <form method="POST" action="/user/passoword-reset">
      <div class="field">
       <label class="label">Email</label>
       <div class="control">
        <input class="input" type="email" name="email" placeholder="Enter your email" required>
       </div>
      </div>
      <div class="field">
       <div class="control">
        <button class="button is-primary" type="submit">Reset Password</button>
       </div>
      </div>
     </form>
    </div>
</section>

<script>
    // Hide alert message after 5 seconds
    setTimeout(function() {
    document.getElementById('alert-message').style.display = 'none';
    }, 5000);
</script>